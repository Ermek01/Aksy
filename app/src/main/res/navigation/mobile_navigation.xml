<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/itemsFragment">


    <fragment
        android:id="@+id/itemsFragment"
        android:name="kg.smartpost.aksy.ui.items.ItemsFragment"
        android:label="fragment_announcement"
        tools:layout="@layout/fragment_announcement">
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/chosenFragment"
        android:name="kg.smartpost.aksy.ui.chosen.ChosenFragment"
        android:label="fragment_chosen"
        tools:layout="@layout/fragment_chosen" />
    <fragment
        android:id="@+id/itemsDetailFragment"
        android:name="kg.smartpost.aksy.ui.items.ItemsDetailFragment"
        android:label="fragment_items_detail"
        tools:layout="@layout/fragment_items_detail" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="kg.smartpost.aksy.ui.items.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
</navigation>