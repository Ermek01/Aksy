<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <include
        android:id="@+id/app_bar_main"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="262dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/navigation_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="44dp"
            android:paddingStart="16dp"
            android:paddingEnd="25dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/navigation_header_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icon_app"
                android:layout_gravity="center"
                />

            <RelativeLayout
                android:id="@+id/btn_announcement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp">

                <ImageView
                    android:id="@+id/img_announcement"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_announcement"
                    />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_back_outline"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Жарыялар"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito"
                    android:textFontWeight="600"
                    android:layout_toEndOf="@id/img_announcement"
                    android:layout_marginStart="18dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C4C4C4"
                    android:layout_below="@id/img_announcement"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <ImageView
                    android:id="@+id/img_about"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_about_app"
                    />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_back_outline"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тиркеме жөнүндө"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito"
                    android:textFontWeight="600"
                    android:layout_toEndOf="@id/img_about"
                    android:layout_marginStart="18dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C4C4C4"
                    android:layout_below="@id/img_about"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_chosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <ImageView
                    android:id="@+id/img_chosen"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chosen_menu"
                    />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_back_outline"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Жаккандар"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito"
                    android:textFontWeight="600"
                    android:layout_toEndOf="@id/img_chosen"
                    android:layout_marginStart="18dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C4C4C4"
                    android:layout_below="@id/img_chosen"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Соц. тармактарда бөлүшүңүз:"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:textFontWeight="600"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_share_fc"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share_wa"
                    android:layout_marginStart="10dp"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share_tt"
                    android:layout_marginStart="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share_inst"
                    android:layout_marginStart="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share_email"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:text="Жарыя берүү үчүн алдынкы"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/nunito"
                android:layout_marginTop="26dp"
                android:textFontWeight="600"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="телефону аркылуу байлашыңыз:"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/nunito"
                android:layout_marginTop="10dp"
                android:textFontWeight="600"/>

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/stroke_relative_layout">

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:text="0773 31 09 66"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito"
                    android:textFontWeight="400"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>