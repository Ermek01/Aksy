<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_marginBottom="15dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginStart="5dp"
    android:background="?attr/selectableItemBackground"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_layout">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:src="@drawable/def_image"/>

        <ImageView
            android:id="@+id/btn_chosen"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chosen_disable"
            android:layout_below="@id/img"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img"
            android:layout_toStartOf="@+id/btn_chosen"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/nunito"
            android:textFontWeight="700"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/nunito"
            android:textFontWeight="600"/>

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:maxLines="1"
            android:textColor="@color/textColorDesc"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/nunito"
            android:textFontWeight="600"/>
        
        <ImageView
            android:id="@+id/img_view"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_views"
            android:layout_below="@id/desc"
            android:layout_marginTop="20dp"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="11dp"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="55"
            android:textSize="8sp"
            android:fontFamily="@font/roboto"
            android:textFontWeight="400"
            android:textColor="#BEBEBE"
            android:layout_marginTop="19dp"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@id/img_view"
            android:layout_below="@id/desc"
            android:layout_toStartOf="@id/date"
            android:layout_marginBottom="11dp"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13.10.2021"
            android:fontFamily="@font/nunito"
            android:textSize="8sp"
            android:layout_marginTop="19dp"
            android:layout_below="@id/desc"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="12dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>